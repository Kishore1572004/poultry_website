@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        /* Full page background */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            background: url('/images/login-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            position: relative;
        }

        /* Content container */
        .login-container {
            position: relative;
            z-index: 1;
            max-width: 400px;
            margin: 5% auto;
            background-color: rgba(255, 255, 255, 0.92); /* White with slight opacity */
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            opacity:90%;
        }

        h2, .alert, .home-link, p {
            color: #333;
        }

        .form-group {
            margin-bottom: 1rem;
            margin-right: 1rem;
        }

        .form-control {
            width: 100%;
            padding: 0.8rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

        .btn-primary {
            background-color: #5c3b28;
            color: white;
            border: none;
            padding: 0.8rem;
            font-size: 1rem;
            border-radius: 6px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #3e2918;
            }

        .home-link {
            text-align: left;
            padding: 1rem;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }

            .home-link a {
                text-decoration: none;
                color: white;
                font-weight: bold;
            }
            .home-link:hover{
                text-decoration:underline;
            }

        .alert {
            padding: 0.8rem;
            border-radius: 6px;
            margin: 1rem auto;
            max-width: 400px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>

    <div class="overlay"></div>

    <div class="home-link">
        <a href="@Url.Action("Index", "Home")">🏠 Home</a>
    </div>

    <div class="login-container">
        <h2 style="text-align: center;">User Login</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" style="text-align:center;">@TempData["Success"]</div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger" style="text-align:center;">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input name="email" class="form-control" placeholder="Email" autocomplete="off" required />
            </div>

            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" required />
            </div>

            <button type="submit" class="btn-primary">Login</button>
        </form>


        <p style="text-align: center; margin-top: 1rem;">
            New user? <a href="@Url.Action("Register", "Auth")">Register here</a>
        </p>
    </div>

</body>

</html>
